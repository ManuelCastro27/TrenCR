@model TransportePublico.Models.Ruta
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Rutas</h3>
        </div>
    </div>
    <div class="row">
       <div class="col-sm-10">
           <form method="post" asp-action="Edit">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="NombreRuta" class="control-label"></label>
                   <input asp-for="NombreRuta" class="form-control"/>
                   <span asp-validation-for="NombreRuta" class="text-danger"></span>
               </div>
               <div class="form-group">
                   <input type="submit" value="Editar Ruta" class="btn btn-primary"/>
               </div>
           </form>
       </div>
    </div>
</div>

@section scripts{
    @{ <partial name="_ValidationScriptsPartial"/>}
 }

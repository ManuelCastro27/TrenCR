@model IEnumerable<TransportePublico.Models.Estacion>

@{
    ViewData["Title"] = "Lista de Estaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Estaciones</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Estaciones">Agregar Nueva Estación</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.IDEstacion)</td>
                        <td>@Html.DisplayNameFor(m => m.NombreEstacion)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IDEstacion</td>
                            <td>@item.NombreEstacion</td>
                            <td>
                                <a asp-controller="Estaciones" asp-action="Edit" asp-route-id="@item.IDEstacion" class="btn btn-warning">Editar</a>
                                <a asp-controller="Estaciones" asp-action="Delete" asp-route-id="@item.IDEstacion" class="btn btn-warning">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen Estaciones</p>
        }
    </div>
</div>


